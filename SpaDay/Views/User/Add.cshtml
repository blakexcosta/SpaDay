@{
}
<!-- This is will only render is the passwords did not match -->
@if (ViewBag.error != null)
{
    <h2>@ViewBag.error </h2>

    <form method="post" action="/user">
        <label for="username">Username:</label>
        <input type="text" name="username" value="@ViewBag.username" />
        <br />
        <label for="email">Email:</label>
        <input type="email" name="email" value="@ViewBag.email" />
        <br />
        <label for="password">Password:</label>
        <input type="password" name="password" />
        <br />
        <label for="verify">Confirm Password:</label>
        <input type="password" name="verify" />
        <br />
        <input type="submit" value="Submit" />
    </form>
}
else
{
    <!-- This is what will render normally -->

    <form method="post" action="/user">
        <label for="username">Username:</label>
        <input type="text" name="username" />
        <br />
        <label for="email">Email:</label>
        <input type="email" name="email" />
        <br />
        <label for="password">Password:</label>
        <input type="password" name="password" />
        <br />
        <label for="verify">Confirm Password:</label>
        <input type="password" name="verify" />
        <br />
        <input type="submit" value="Submit" />
    </form>

    <label for="credit-card">Choose a Card Type:</label>
